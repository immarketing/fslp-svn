<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>com.algo.smartgwt.server.GreetingServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/smartgwt/greet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>courseAdd</servlet-name>
    <servlet-class>com.algo.smartgwt.server.datas.course.Add</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>courseAdd</servlet-name>
    <url-pattern>/smartgwt/courseadd</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>courseNew</servlet-name>
    <servlet-class>com.algo.smartgwt.server.datas.course.New</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>courseNew</servlet-name>
    <url-pattern>/smartgwt/coursenew</url-pattern>
  </servlet-mapping>


  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>SmartGWT.html</welcome-file>
  </welcome-file-list>

</web-app>
